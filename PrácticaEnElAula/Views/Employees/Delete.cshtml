@model PrácticaEnElAula.Models.Employee

@{
    ViewData["Title"] = "Empleado - Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Empleado</h1>
<h4>Borrar</h4>
<h5>Seguro que quieres borrar este empleado?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDeIngreso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDeIngreso)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-primary">Volver</a>
        <input type="submit" value="Borrar" class="btn btn-danger" /> 
    </form>
</div>
